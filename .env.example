# Border Safety - Environment Variables Template
# Copy this file to .env and fill in the values

# ============================================
# Required - Generate STRONG secrets!
# ============================================

# Admin username (default: admin)
ADMIN_USERNAME=admin

# Admin password hash - REQUIRED for production
# Generate with: node -e "require('bcryptjs').hash('YourStrongPassword123!', 12).then(console.log)"
ADMIN_PASSWORD_HASH=

# JWT Secret - REQUIRED (64 character random string)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=

# JWT Refresh Secret - REQUIRED (64 character random string)
JWT_REFRESH_SECRET=

# ============================================
# Server Configuration
# ============================================

# Port (Railway sets this automatically)
PORT=3001

# Environment: development | production
NODE_ENV=production

# CORS allowed origins (comma separated)
CORS_ORIGINS=https://yourdomain.com

# ============================================
# Database Configuration
# ============================================

# SQLite database path (Railway volume)
DATABASE_PATH=/data/database.sqlite

# ============================================
# Optional - Notification Services
# ============================================

# LINE Notify Token
LINE_NOTIFY_TOKEN=

# Twilio (SMS)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Firebase Cloud Messaging
FCM_SERVER_KEY=

# SendGrid (Email)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=
