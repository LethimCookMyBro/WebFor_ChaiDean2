# ============================================
# Border Safety Risk Checker - Environment Variables
# ============================================

# --------------------------------------------
# REQUIRED - Application will NOT start without these
# --------------------------------------------

# JWT Secrets (min 32 chars, cryptographically random)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=
JWT_REFRESH_SECRET=

# Admin password hash (generate with: node scripts/generate-admin-hash.js)
ADMIN_PASSWORD_HASH=

# --------------------------------------------
# SERVER CONFIGURATION
# --------------------------------------------

# Environment
NODE_ENV=development
PORT=3001

# Database
DATABASE_URL=sqlite:./db/database.sqlite

# CORS - Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
FRONTEND_URL=http://localhost:5173

# Trust proxy configuration
# Options: loopback, linklocal, uniquelocal, or comma-separated IPs
TRUSTED_PROXIES=loopback

# Cookie domain (leave empty for localhost)
COOKIE_DOMAIN=

# --------------------------------------------
# NOTIFICATION SERVICES (Optional)
# --------------------------------------------

# LINE Notify - https://notify-bot.line.me/
LINE_NOTIFY_TOKEN=

# Twilio SMS - https://console.twilio.com/
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Firebase Cloud Messaging
FCM_SERVER_KEY=

# SendGrid Email - https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@bordersafety.local

# --------------------------------------------
# OPTIONAL - For production scaling
# --------------------------------------------

# Redis URL for distributed rate limiting
REDIS_URL=

# CSRF secret (uses JWT_SECRET if not set)
CSRF_SECRET=

# IP Geolocation API (default: ipapi.co)
IP_GEO_API_URL=https://ipapi.co

# --------------------------------------------
# Logging & Monitoring
# --------------------------------------------

# Log level: error, warn, info, debug
LOG_LEVEL=info

# Audit log retention in days
AUDIT_LOG_RETENTION_DAYS=90
